{
	"compilerOptions": {
		"jsx": "react",
		"lib": ["es5", "es6", "es7", "es2017", "dom"],
		"module": "commonjs",
		"target": "es6",
		"outDir": "build",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"types": ["react"],
		"experimentalDecorators": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build"]
}
